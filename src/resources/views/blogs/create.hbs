<div class="mt-4">
    <h3>Đăng blog</h3>
    <form method="POST" action="/blogs/store">
        <div class="form-group mt-1">
            <label for="name">Tên blog</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>

        <div class="form-group mt-1">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>

        <div class="form-group mt-1">
            <label for="videoId">Video link</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        
        <div class="form-group mt-1">
            <label for="level">Cấp độ</label>
            <input type="text" class="form-control" id="level" name="level">
        </div>

        <button type="submit" class="btn btn-primary mt-4">Thêm blog</button>
    </form>

</div>