<div class="mt-4">
    <div class="row">
        {{#each blogs}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-blog-item" style="width: 18rem;">
                <a href="/blogs/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/blogs/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/blogs/{{this.slug}}" class="btn btn-primary">Đọc</a>
                </div>
          </div>
        </div>
        {{/each}}
    </div>
</div>